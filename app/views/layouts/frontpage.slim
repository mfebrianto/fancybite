doctype html
html
  head
    meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1"
    title FancyBite
    /!Google Fonts!/
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Oswald|Lato|Roboto:400,500,700|Open+Sans:600,700,300'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Pacifico'

    = javascript_include_tag "application"

    = csrf_meta_tags

    = stylesheet_link_tag "front/custom.css", 'data-turbolinks-track' => true
    = stylesheet_link_tag "front/colors_1.css", 'data-turbolinks-track' => true
    = stylesheet_link_tag "front/bootstrap.css", 'data-turbolinks-track' => true
    = stylesheet_link_tag "front/bootstrap-responsive.css", 'data-turbolinks-track' => true
    = stylesheet_link_tag "front/fullcalendar.css", 'data-turbolinks-track' => true
    = stylesheet_link_tag "front/font-awesome.css", 'data-turbolinks-track' => true
    = stylesheet_link_tag "front/flexslider.css", media: 'screen', 'data-turbolinks-track' => true
    = stylesheet_link_tag "front/jquery.mCustomScrollbar.css", 'data-turbolinks-track' => true
    = stylesheet_link_tag "front/style.css", media: 'screen', 'data-turbolinks-track' => true
    = stylesheet_link_tag "front/skin.css", 'data-turbolinks-track' => true
    = stylesheet_link_tag "front/fancybite.css", 'data-turbolinks-track' => true

  body
    div class=['full-black-overlay'] style='display: none;'

    div class=['order-detail'] style='display: none;'
      div class=['order-detail-left']
      div class=['order-detail-right']

    div id='wrapper'
      header id='header'
        div class=['container']
          div class=['row-fluid']
            div class=['span3']
              div class=['logo']
                = link_to root_path
                  = image_tag('logo/logosmall.png', alt: 'img')
            div class=['span9 margin-non']
              div class=['top-container']
              div class=['navbar navbar-inverse nav-bar']
                div class=['navbar-inner nav-bar-inner']
                  button type='button' class=['btn btn-navbar'] data-toggle='collapse' data-target='.nav-collapse'
                    span class=['icon-bar']
                    span class=['icon-bar']
                    span class=['icon-bar']
                  div class=['nav-collapse collapse top-nav']
                    ul class=['nav']
                      li class=["dropdown #{active_menu?(controller.controller_name,'frontpage')}"]
                        = link_to 'Home', root_path, class: 'dropdown-toggle'
                      li class=["dropdown #{active_menu?(controller.controller_name,'complete_menu_items')}"]
                        = link_to 'Our Menu', complete_menu_items_path, class: 'dropdown-toggle'
                      li class=["dropdown #{active_menu?(controller.controller_name,'home')}"]
                        = link_to 'Your Shopping Cart', root_path, class: 'dropdown-toggle'
                      li class=["dropdown #{active_menu?(controller.controller_name,'home')}"]
                        = link_to 'About Us', root_path, class: 'dropdown-toggle'
                      li class=["dropdown #{active_menu?(controller.controller_name,'home')}"]
                        = link_to 'Contact Us', root_path, class: 'dropdown-toggle'

    section id='banner'
      div class=['caption']
        div class=['banner-caption']
          div class=['container']
            div class=['row-fluid']
              div class=['span3 banner-left']
                ul class=['bxslider-2']
                  li
                    div class=['caption-left']
                      div class=['deal-tag']
                        strong class=['title']
                          |Coffe of the day
                      div class=['left-caption-box']
                        strong class=['title']
                          |Deliciousness
                          br
                          |made for you
                        = image_tag('front/chef-img.png', alt: 'img', class: 'chef-img')
                  li
                    div class=['caption-left']
                      div class=['deal-tag']
                        strong class=['title']
                          |Coffe of the day
                      div class=['left-caption-box']
                        strong class=['title']
                          |Deliciousness
                          br
                          |made for you
                        = image_tag('front/chef-img.png', alt: 'img', class: 'chef-img')
                  li
                    div class=['caption-left']
                      div class=['deal-tag']
                        strong class=['title']
                          |Coffe of the day
                      div class=['left-caption-box']
                        strong class=['title']
                          |Deliciousness
                          br
                          |made for you
                        = image_tag('front/chef-img.png', alt: 'img', class: 'chef-img')
              div class=['span9 right-panel']
                div class=['caption-right']
                  strong class=['title']
                    span class=['text']
                      |fresh meals everyday
                  strong class=['open']
                    |open all week:   10
                    span class=['small']
                      |00
                    |- 23
                    span class=['small']
                      |30
                div class=['caption-center']
                  strong class=['title']
                    |DELICIOUS, BEVERAGES AND GREAT-TASTING FOOD.
                    span
                      |THE SECRET TO MAKING LIFE BETTER.
                  = link_to 'DOWNLOAD OUR FULL MENU', root_path, class: 'download'

      ul class="bxslider"
        - @banner_menus.each do |banner|
          li
            = link_to banner.url
              = image_tag(banner.picture.url(:original), alt: 'img')

    div id='cart' style="width:65px; height:93px; background-image: url('/assets/front/basket-half.png'); z-index:100; position: absolute; top: 245px; right: 0"


    == yield

    footer id='footer'
      div class=['row-fluid']
        section class=['footer-section-3']
          div class=['container']
            div class=['span6']
              div class=['copy-section']
                strong class=['copy']
                  |Â© 2014 Fancy Bite, Developed by MichaelClairine
            div class=['span6']


    = javascript_include_tag "front/bootstrap.min.js"
    = javascript_include_tag "front/jquery.flexslider.js"
    = javascript_include_tag "front/fullcalendar.js"
    = javascript_include_tag "https://maps.googleapis.com/maps/api/js?sensor=true"
    = javascript_include_tag "front/jquery.mCustomScrollbar.concat.min.js"
    = javascript_include_tag "front/excanvas.js"
    = javascript_include_tag "front/jquery.easy-pie-chart.js"
    = javascript_include_tag "front/jquery.bxslider.js"
    = javascript_include_tag "front/custom.js"
    = javascript_include_tag "front/jquery.jcarousel.min.js"
    = javascript_include_tag "front/fancybite.js"

    javascript:
      (function($) {
        $(document).ready(function(){
          var el = $('#cart');
          var el2 = $('.order-detail');

          var marginTop = function(){
            return $(document).scrollTop();
          };

          var scrollAction = function(){
            el.animate({"marginTop": marginTop()+"px"}, {duration:500,queue:false});
          };

          var scrollAction2 = function(){
            el2.animate({"marginTop": marginTop()+"px"}, {duration:500,queue:false});
          };

          /** trigger the auto scroll */
          $(window).scroll(function(){
            scrollAction();
            scrollAction2();
          });
        });
      })(jQuery);